<h2>Word: <%= @defs.word.val %></h2>
<h3>Definition: <%= @defs.val %></h3>

<form action="/word/<%= @defs.word.id %>/definitions/<%= @defs.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="val">Rewrite definition</label>
  <input id="val" name="val" type="text">

  <button type="submit">Update definition</button>
</form>

<form action="/words/<%= @defs.word.id %>/definitions/<%= @defs.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete definition</button>
</form>

<a href="/words/<%= @defs.word.id %>">Back to <%= @defs.word.val %></a>